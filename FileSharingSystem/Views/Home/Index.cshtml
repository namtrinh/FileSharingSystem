@model List<FileModel>

<div class="container mt-5">
    <h2 class="text-center mb-4">Trang chủ - Danh sách tệp đã tải lên</h2>

    <div class="card p-4 shadow-sm">
        @if (User.Identity.IsAuthenticated)
        {
            <!-- Form tải lên tệp -->
            <div class="mb-4">
                <h5 class="mb-3">Tải lên tệp mới</h5>
                <form asp-controller="FileManagement" asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="input-group">
                        <input type="file" name="file" class="form-control" required />
                        <button type="submit" class="btn btn-primary">Tải lên</button>
                    </div>
                </form>
            </div>
        }
        else
        {
            <!-- Thông báo yêu cầu đăng nhập -->
            <div class="alert alert-warning text-center">
                Bạn cần <a href="/Identity/Account/Login" class="alert-link">đăng nhập</a> để tải lên tệp tin.
            </div>
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
    <!-- Danh sách các tệp đã tải lên -->
    <div class="card mt-4 p-4 shadow-sm">
        <h5 class="mb-3">Danh sách tệp đã tải lên</h5>
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên tệp tin</th>
                        <th>Ngày tải lên</th>
                        <th>Loại tệp</th>
                        <th>Kích thước tệp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@file.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@file.FileType</td>
                            <td>@FileSizeFormatter.FormatFileSize(file.FileSize)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">Không có tệp nào để hiển thị.</div>
        }
    </div>
    }
</div>

<!-- Thêm một số CSS để cải thiện giao diện -->
<style>
    .card {
        border-radius: 10px;
        border: 1px solid #dee2e6;
    }

    .input-group input {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .input-group .btn {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef; /* Thay đổi màu nền khi hover */
    }

    .thead-dark th {
        background-color: #ffc107; /* Màu nền cho header bảng - vàng */
        color: black; /* Màu chữ cho header - đen */
    }
</style>
