@model List<FileModel>
@using System.Security.Claims
<div class="container mt-5">
    <h2 class="text-center mb-4">Trang chủ - Danh sách tệp đã tải lên</h2>

    <div class="card p-4 shadow-sm">
        @if (User.Identity.IsAuthenticated)
        {
            <!-- Hiển thị thông báo thành công từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- Hiển thị thông báo lỗi từ TempData -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <!-- Form tải lên tệp -->
            <div class="mb-4">
                <h5 class="mb-3">Tải lên tệp mới</h5>
                <form asp-controller="FileManagement" asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="input-group">
                        <input type="file" name="file" class="form-control" required />
                        <button type="submit" class="btn btn-primary">Tải lên</button>
                    </div>
                </form>

                <!-- Hiển thị thông báo lỗi ModelState -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Thông báo yêu cầu đăng nhập -->
            <div class="alert alert-warning text-center">
                Bạn cần <a href="/Identity/Account/Login" class="alert-link">đăng nhập</a> để tải lên tệp tin.
            </div>
        }
    </div>

    <!-- Nút chuyển đổi giữa danh sách tệp -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="mb-4 text-center">
            <button class="btn btn-secondary" onclick="showAllFiles()">Tất cả tệp</button>
            <button class="btn btn-secondary" onclick="showUserFiles()">Tệp của tôi</button>
        </div>
    }

    <!-- Danh sách tất cả tệp đã tải lên -->
    <div id="allFiles" class="card mt-4 p-4 shadow-sm">
        <h5 class="mb-3">Danh sách tất cả tệp đã tải lên</h5>
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên tệp tin</th>
                        <th>Ngày tải lên</th>
                        <th>Loại tệp</th>
                        <th>Kích thước tệp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@file.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(string.IsNullOrEmpty(file.FileType) ? "N/A" : file.FileType)</td>
                            <td>@FileSizeFormatter.FormatFileSize(file.FileSize)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">Không có tệp nào để hiển thị.</div>
        }
    </div>

    <!-- Danh sách tệp của người dùng -->
    <div id="userFiles" class="card mt-4 p-4 shadow-sm" style="display:none;">
        <h5 class="mb-3">Danh sách tệp của tôi</h5>
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên tệp tin</th>
                        <th>Ngày tải lên</th>
                        <th>Loại tệp</th>
                        <th>Kích thước tệp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Where(f => f.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@file.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(string.IsNullOrEmpty(file.FileType) ? "N/A" : file.FileType)</td>
                            <td>@FileSizeFormatter.FormatFileSize(file.FileSize)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">Không có tệp nào để hiển thị.</div>
        }
    </div>
</div>

<!-- Thêm một số CSS để cải thiện giao diện -->
<style>
    .card {
        border-radius: 10px;
        border: 1px solid #dee2e6;
    }

    .input-group input {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .input-group .btn {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef; /* Thay đổi màu nền khi hover */
    }

    .thead-dark th {
        background-color: #ffc107; /* Màu nền cho header bảng - vàng */
        color: black; /* Màu chữ cho header - đen */
    }
</style>

<!-- Thêm JavaScript để điều khiển việc hiển thị -->
<script>
    function showAllFiles() {
        document.getElementById('allFiles').style.display = 'block';
        document.getElementById('userFiles').style.display = 'none';
    }

    function showUserFiles() {
        document.getElementById('allFiles').style.display = 'none';
        document.getElementById('userFiles').style.display = 'block';
    }
</script>
